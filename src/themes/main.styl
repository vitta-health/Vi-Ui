@import '../themes/fonts.css'
@import '../themes/colors'

$Montserrat = 'Montserrat', Futura, 'Trebuchet MS', sans-serif
$Roboto = 'Roboto', Arial, Helvetica, sans-serif

/*! Based on normalize.css v8.0.0 | MIT License | github.com/necolas/normalize.css */
/*! Also some snippets from bootstrap: https://github.com/twbs/bootstrap/blob/v4-dev/dist/css/bootstrap.css */

html
  touch-action manipulation

[hidden]
  display none

::-webkit-file-upload-button
  -webkit-appearance button
  font inherit

.sr-only
  position absolute
  width 1px
  height 1px
  padding 0
  overflow hidden
  clip rect(0, 0, 0, 0)
  white-space nowrap
  border 0

.sr-only-focusable:active, .sr-only-focusable:focus
  position static
  width auto
  height auto
  overflow visible
  clip auto
  white-space normal

.ViComponent
  box-sizing border-box
  color $text-color-main
  font-family $Montserrat
  font-weight 500
  font-size 16px
  line-height 1.15em
  -webkit-text-size-adjust 100%

  *
  *:before
  *:after
    box-sizing inherit

  a
    text-decoration underline
    background-color transparent
    color $link-color

  a
  button
    user-select none
    -webkit-tap-highlight-color transparent

  b,
  strong
    font-weight 700

  h1
  h2
  h3
  h4
  h5
  h6
  p
  hr
  td
  th
  tr
    font-size 1em
    line-height 1.2em
    font-weight 500
    margin 0 0 0.67em
    color inherit

    &:last-child
      margin-bottom 0

  h1
  h2
  h3
  h4
  h5
  h6
    &:first-child
      margin-top 0

  h1
    font-weight 400
    font-size 2em
    letter-spacing 0.01em
    line-height 0.87em
    margin 0.67em 0
  h2
    font-weight 400
    font-size 1.5em
    letter-spacing 0.01em
    line-height 0.87em
    margin 0.83em 0
  h3
    font-size 1.2em
    letter-spacing 0.03em
    line-height 0.87em
    margin 1.00em 0
  h4
    font-size 1.05em
    line-height 0.87em
    margin 1.33em 0
  h5
    font-size 0.86em
    line-height 0.87em
    margin 1.67em 0
  h6
    font-size 0.75em
    font-weight 700
    line-height 0.87em
    margin 2.33em 0

  p
    font-family $Roboto
    font-weight normal

  small
    font-size 80%

  hr
    border none
    border-top 1px solid rgba($text-color-main, 0.15)
    margin 0.67em 0

  img
    border-style none

  abbr[title]
    border-bottom none
    text-decoration underline
    text-decoration underline dotted

  code
    background $block-background-main

  pre
  code
  kbd
  samp
    font-family monospace
    font-size 1em

  pre
    code
      display block
      padding 0.5em 0.9em

  sub
  sup
    font-size 75%
    line-height 0
    position relative
    vertical-align baseline

  sub
    bottom -0.25em

  sup
    top -0.5em

  details
    display block

  summary
    display list-item

  textarea
    overflow auto

  fieldset
    border 0
    padding 0
    margin 0 0 1.4em
    &:last-child
      margin 0
    legend
      border 0
      font-size 1.1em
      margin 0 0 1em
      padding 0 0 0.3em
      text-transform uppercase

  button
  input
  optgroup
  select
  textarea
    font-family inherit
    font-size 100%
    line-height 1.15em
    margin 0

  button
  input
    overflow visible

  button
  select
    text-transform none

  button
  [type="button"]
  [type="reset"]
  [type="submit"]
    -webkit-appearance button

  button::-moz-focus-inner
  [type="button"]::-moz-focus-inner
  [type="reset"]::-moz-focus-inner
  [type="submit"]::-moz-focus-inner
    border-style none
    padding 0

  button:-moz-focusring
  [type="button"]:-moz-focusring
  [type="reset"]:-moz-focusring
  [type="submit"]:-moz-focusring
    outline: 1px dotted ButtonText

  [type="checkbox"]
  [type="radio"]
    box-sizing border-box
    padding 0

  [type="number"]::-webkit-inner-spin-button
  [type="number"]::-webkit-outer-spin-button
    height auto

  [type="search"]
    -webkit-appearance textfield
    outline-offset -2px

  [type="search"]::-webkit-search-decoration
    -webkit-appearance none


  ::-webkit-scrollbar
    width 10px
    padding 0 3px 0 0

  /* Handle */
  ::-webkit-scrollbar-thumb
    background rgba(0,0,0, 0.2)
    border-radius 10px

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover
    background rgba(0,0,0, 0.3)

  /* Track */
  ::-webkit-scrollbar-track
    background transparent
